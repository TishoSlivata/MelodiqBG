@model MelodiaBG.Models.Instrument

<h1>Изтриване на продукт</h1>

<h3>Сигурни ли сте, че искате да изтриете този продукт?</h3>
<div>
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
    <p><strong>Цена:</strong> @Model.Price лв.</p>
</div>

<form asp-action="DeleteConfirmed" method="POST">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger" onclick="return confirm('Сигурни ли сте, че искате да изтриете този продукт?');">
        Да, изтрий
    </button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>


