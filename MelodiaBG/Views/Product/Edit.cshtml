@model MelodiaBG.Models.ViewModels.EditInstrumentViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-white text-center">
                    <h4>Редактиране на продукт</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="InstrumentId" />

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Име</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Цена</label>
                            <input asp-for="Price" type="number" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Категория</label>
                            <select asp-for="CategoryId" class="form-control">
                                @foreach (var category in (List<MelodiaBG.Models.Category>)ViewData["Categories"])
                                {
                                    <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Текущо изображение:</label>
                            <br>
                            <img src="@Model.ImageUrl" width="200" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label">Качи ново изображение</label>
                            <input asp-for="Image" type="file" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-warning w-100">Запази</button>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Назад</a>
                </div>
            </div>
        </div>
    </div>
</div>
